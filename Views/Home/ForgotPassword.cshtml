@model string

<div class="container d-flex justify-content-center align-items-center" style="min-height: 70vh;">
    <div class="login-container shadow-lg">
        <div class="library-icon text-center mb-4">
            <i class="fas fa-key fa-3x" style="color: #8a5f36;"></i>
        </div>
        <h2 class="text-center mb-4">Şifremi Unuttum</h2>
        
        <form method="post" asp-controller="Home" asp-action="ForgotPassword" class="mb-3">
            <div class="form-group mb-4">
                <label class="form-label mb-2">E-posta adresinizi girin:</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                    <input type="email" name="email" class="form-control" placeholder="email@example.com" required />
                </div>
            </div>
            
            <button type="submit" class="btn btn-block login-btn">
                <i class="fas fa-redo me-2"></i>Şifre Sıfırla
            </button>
            
            <div class="text-center mt-3">
                <a href="@Url.Action("Login", "Home")" class="text-muted small">
                    <i class="fas fa-arrow-left me-1"></i>Giriş Sayfasına Dön
                </a>
            </div>
        </form>

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success mt-3 d-flex align-items-center">
                <i class="fas fa-check-circle me-2"></i>
                <div>@TempData["Message"]</div>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger mt-3 d-flex align-items-center">
                <i class="fas fa-exclamation-circle me-2"></i>
                <div>@TempData["Error"]</div>
            </div>
        }
    </div>
</div>

<style>
    .login-container {
        background-color: white;
        padding: 2.5rem;
        border-radius: 15px;
        width: 100%;
        max-width: 450px;
        border-top: 5px solid #8a5f36;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    }
    
    .library-icon i {
        transition: transform 0.5s;
    }
    
    .library-icon:hover i {
        transform: rotate(-15deg);
    }
    
    .form-control {
        padding: 12px 15px;
        border-radius: 8px;
        border: 1px solid #ddd;
        transition: all 0.3s;
    }
    
    .form-control:focus {
        border-color: #8a5f36;
        box-shadow: 0 0 0 0.2rem rgba(138, 95, 54, 0.25);
    }
    
    .input-group-text {
        background-color: #f8f9fa;
        border-right: none;
    }
    
    .input-group .form-control {
        border-left: none;
    }
    
    .login-btn {
        background-color: #8a5f36;
        color: white;
        padding: 12px;
        font-weight: 500;
        border-radius: 8px;
        transition: all 0.3s;
        letter-spacing: 0.5px;
    }
    
    .login-btn:hover {
        background-color: #6d4b2a;
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(138, 95, 54, 0.3);
    }
    
    .form-label {
        color: #495057;
        font-weight: 500;
    }
</style>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
       
            document.querySelector('form').addEventListener('submit', function() {
                const submitButton = this.querySelector('button[type="submit"]');
                submitButton.disabled = true;
                submitButton.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i> İşleniyor...';
            });
        });
    </script>
}