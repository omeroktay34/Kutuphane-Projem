@model List<kutuphane.Models.CategoryModel>

@{
    ViewData["Title"] = "Kitap Ekle";
}

<style>
    :root {
        --primary: #8a5f36;
        --primary-light: #a87d52;
        --secondary: #f5f0eb;
        --text: #3a3a3a;
        --light: #f9f9f9;
        --border: #e0d6cc;
    }

    body {
       
        background-color: #fff;
        color: var(--text);
        line-height: 1.7;
        margin: 0;
        padding: 0;
        background-image: url('data:image/svg+xml;utf8,<svg width="100" height="100" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg"><path fill="%23f5f0eb" opacity="0.3" d="M30,10 L70,10 L90,30 L90,70 L70,90 L30,90 L10,70 L10,30 Z" /></svg>');
        background-size: 40px;
        background-attachment: fixed;
    }

    .container {
        max-height: 870px;
        max-width: 700px;
        margin: 5% auto;
        padding: 0;
        overflow: hidden;
        border-radius: 12px;
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.08);
        background: white;
        position: relative;
    }

    .form-header {
        background: var(--primary);
        padding: 25px 40px;
        color: white;
        position: relative;
        display: flex;
        align-items: center;
    }

    .form-header h2 {
        margin: 0;
        font-size: 1.8rem;
        font-weight: 600;
        letter-spacing: 0.5px;
        display: flex;
        align-items: center;
    }

    .form-header h2 svg {
        margin-right: 12px;
        width: 24px;
        height: 24px;
        fill: white;
    }

    .form-header::after {
        content: "";
        position: absolute;
        bottom: -15px;
        left: 40px;
        width: 30px;
        height: 30px;
        background: var(--primary);
        transform: rotate(45deg);
        z-index: 1;
    }

    .form-content {
        padding: 40px;
        position: relative;
        z-index: 2;
    }

    .form-group {
        margin-bottom: 25px;
        position: relative;
    }

    label {
        display: flex;
        align-items: center;
        margin-bottom: 8px;
        font-weight: 500;
        color: var(--primary);
        font-size: 14px;
        letter-spacing: 0.3px;
    }

    label svg {
        margin-right: 8px;
        width: 18px;
        height: 18px;
        fill: var(--primary);
    }

    input[type="text"],
    input[type="number"],
    input[type="file"],
    select {
        width: 100%;
        padding: 12px 15px 12px 40px;
        border: 1px solid var(--border);
        border-radius: 6px;
        font-size: 15px;
    
        transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
        background-color: var(--light);
        color: var(--text);
    }

    .input-wrapper {
        position: relative;
    }

    .input-icon {
        position: absolute;
        left: 15px;
        top: 50%;
        transform: translateY(-50%);
        width: 18px;
        height: 18px;
        fill: var(--primary);
        opacity: 0.7;
    }

    input[type="text"]:focus,
    input[type="number"]:focus,
    select:focus {
        border-color: var(--primary);
        outline: none;
        box-shadow: 0 5px 15px rgba(138, 95, 54, 0.1);
        background-color: white;
    }

    select {
        appearance: none;
        background-image: url("data:image/svg+xml;charset=UTF-8,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' fill='%238a5f36'%3e%3cpath d='M7 10l5 5 5-5z'/%3e%3c/svg%3e");
        background-repeat: no-repeat;
        background-position: right 15px center;
        background-size: 15px;
        padding-left: 15px;
    }

    optgroup {
        font-style: normal;
        font-weight: 600;
        color: var(--primary);
       
    }

    option {
        padding: 10px;
        background-color: white;
    }

    .submit-btn {
        background: linear-gradient(135deg, var(--primary), var(--primary-light));
        color: white;
        border: none;
        padding: 14px;
        font-size: 15px;
        border-radius: 6px;
        cursor: pointer;
      
        transition: all 0.3s;
        width: 100%;
        font-weight: 600;
        letter-spacing: 0.8px;
        text-transform: uppercase;
        margin-top: 10px;
        box-shadow: 0 4px 6px rgba(138, 95, 54, 0.1);
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .submit-btn svg {
        margin-right: 10px;
        width: 18px;
        height: 18px;
        fill: white;
    }

    .submit-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 7px 14px rgba(138, 95, 54, 0.2);
    }

    .book-decoration {
        position: absolute;
        right: -30px;
        top: -30px;
        width: 120px;
        height: 120px;
        background: var(--secondary);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0.9;
    }

    .book-decoration svg {
        width: 50px;
        height: 50px;
        fill: var(--primary);
    }

    .file-input-wrapper {
        position: relative;
        overflow: hidden;
        display: inline-block;
        width: 100%;
    }

    .file-input-button {
        border: 1px dashed var(--border);
        border-radius: 6px;
        padding: 30px 20px;
        text-align: center;
        width: 100%;
        cursor: pointer;
        transition: all 0.3s;
        background-color: var(--light);
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .file-input-button:hover {
        border-color: var(--primary);
        background-color: rgba(138, 95, 54, 0.05);
    }

    .file-input-button svg {
        width: 24px;
        height: 24px;
        fill: var(--primary);
        margin-bottom: 10px;
    }

    .file-input-text {
        color: var(--primary);
        font-weight: 500;
        font-size: 14px;
    }

    #CoverImage {
        position: absolute;
        left: 0;
        top: 0;
        opacity: 0;
        width: 100%;
        height: 100%;
        cursor: pointer;
    }

    @@media (max-width: 768px) {
        .container {
            margin: 20px;
            border-radius: 8px;
        }
        
        .form-header, .form-content {
            padding: 20px;
        }
        
        .form-header h2 {
            font-size: 1.5rem;
        }
        
        .book-decoration {
            display: none;
        }
        
        input[type="text"],
        input[type="number"],
        select {
            padding: 12px 15px 12px 35px;
        }
        
        .input-icon {
            left: 12px;
            width: 16px;
            height: 16px;
        }
    }
</style>



<div class="container">
    <div class="form-header">
        <h2>
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                <path d="M18 2H6c-1.1 0-2 .9-2 2v16c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2zM6 4h5v8l-2.5-1.5L6 12V4z"/>
            </svg>
            Kitap Ekle
        </h2>
    </div>
    
    <div class="form-content">
        <div class="book-decoration">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                <path d="M3 6c-.55 0-1 .45-1 1v13c0 1.1.9 2 2 2h13c.55 0 1-.45 1-1s-.45-1-1-1H5c-.55 0-1-.45-1-1V7c0-.55-.45-1-1-1zm17-4H8c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2zm-2 9h-3v3c0 .55-.45 1-1 1s-1-.45-1-1v-3h-3c-.55 0-1-.45-1-1s.45-1 1-1h3V6c0-.55.45-1 1-1s1 .45 1 1v3h3c.55 0 1 .45 1 1s-.45 1-1 1z"/>
            </svg>
        </div>
        
        <form asp-action="AddBook" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="Title">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                        <path d="M5 4v3h5.5v12h3V7H19V4z"/>
                    </svg>
                    Kitap Adı
                </label>
                <div class="input-wrapper">
                    <svg class="input-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                        <path d="M18 2H6c-1.1 0-2 .9-2 2v16c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2zM6 4h5v8l-2.5-1.5L6 12V4z"/>
                    </svg>
                    <input type="text" id="Title" name="Title" required placeholder=" Suç ve Ceza" />
                </div>
            </div>
            
            <div class="form-group">
                <label for="PageCount">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                        <path d="M3 5v14c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2H5c-1.11 0-2 .9-2 2zm12 4c0 1.66-1.34 3-3 3s-3-1.34-3-3 1.34-3 3-3 3 1.34 3 3zm-9 8c0-2 4-3.1 6-3.1s6 1.1 6 3.1v1H6v-1z"/>
                    </svg>
                    Sayfa Sayısı
                </label>
                <div class="input-wrapper">
                    <svg class="input-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                        <path d="M20 2H4c-1.1 0-1.99.9-1.99 2L2 22l4-4h14c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2zM6 9h12v2H6V9zm8 5H6v-2h8v2zm4-6H6V6h12v2z"/>
                    </svg>
                    <input type="number" id="PageCount" name="PageCount" min="1" required placeholder=" 450" />
                </div>
            </div>
            
            <div class="form-group">
                <label for="Author">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                        <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                    </svg>
                    Yazar
                </label>
                <div class="input-wrapper">
                    <svg class="input-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                        <path d="M16 11c1.66 0 2.99-1.34 2.99-3S17.66 5 16 5c-1.66 0-3 1.34-3 3s1.34 3 3 3zm-8 0c1.66 0 2.99-1.34 2.99-3S9.66 5 8 5C6.34 5 5 6.34 5 8s1.34 3 3 3zm0 2c-2.33 0-7 1.17-7 3.5V19h14v-2.5c0-2.33-4.67-3.5-7-3.5zm8 0c-.29 0-.62.02-.97.05 1.16.84 1.97 1.97 1.97 3.45V19h6v-2.5c0-2.33-4.67-3.5-7-3.5z"/>
                    </svg>
                    <input type="text" id="Author" name="Author" required placeholder=" Fyodor Dostoyevski" />
                </div>
            </div>
            
            <div class="form-group">
                <label for="CategoryId">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                        <path d="M10 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V8c0-1.1-.9-2-2-2h-8l-2-2z"/>
                    </svg>
                    Kategori
                </label>
                <div class="input-wrapper">
                    <svg class="input-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                        <path d="M10 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V8c0-1.1-.9-2-2-2h-8l-2-2z"/>
                    </svg>
                    <select id="CategoryId" name="CategoryId" required>
                        <option value="">   &nbsp;  &nbsp;   &nbsp;    Bir kategori seçiniz</option>
                        @foreach (var mainCat in Model)
                        {
                            <optgroup label="@mainCat.Name">
                                @if (mainCat.SubCategories != null)
                                {
                                    foreach (var subCat in mainCat.SubCategories)
                                    {
                                        <option value="@subCat.Id">@subCat.Name</option>
                                    }
                                }
                            </optgroup>
                        }
                    </select>
                </div>
            </div>
            
            <div class="form-group">
                <label for="CoverImage">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                        <path d="M19 5v14H5V5h14m0-2H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-4.86 8.86l-3 3.87L9 13.14 6 17h12l-3.86-5.14z"/>
                    </svg>
                    Kapak Resmi
                </label>
                <div class="file-input-wrapper">
                    <div class="file-input-button">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                            <path d="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"/>
                        </svg>
                        <div class="file-input-text">Resim Yükle (PNG, JPG)</div>
                    </div>
                    <input type="file" id="CoverImage" name="CoverImageFile" accept="image/*" />
                </div>
            </div>
            
            <button type="submit" class="submit-btn">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                    <path d="M17 3H5c-1.11 0-2 .9-2 2v14c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V7l-4-4zm-5 16c-1.66 0-3-1.34-3-3s1.34-3 3-3 3 1.34 3 3-1.34 3-3 3zm3-10H5V5h10v4z"/>
                </svg>
                Kitabı Kaydet
            </button>
        </form>
    </div>
</div>