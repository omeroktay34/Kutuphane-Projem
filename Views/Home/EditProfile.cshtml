@model kutuphane.Models.UserModel

<style>
    :root {
        --primary-color: #8a5f36;
        --secondary-color: #f9f5f1;
        --hover-color: #6d4b2a;
    }

    .profile-edit-container {
        max-width: 600px;
        margin: 2rem auto;
        padding: 2.5rem;
        background-color: white;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(138, 95, 54, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .profile-edit-container:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 35px rgba(138, 95, 54, 0.15);
    }

    h2 {
        color: var(--primary-color);
        text-align: center;
        margin-bottom: 1.5rem;
        font-weight: 600;
        position: relative;
        padding-bottom: 10px;
    }

    h2::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 80px;
        height: 3px;
        background: var(--primary-color);
        border-radius: 3px;
    }

    .form-control {
        border: 1px solid #ddd;
        border-radius: 6px;
        padding: 12px 15px;
        transition: all 0.3s;
        background-color: var(--secondary-color);
    }

    .form-control:focus {
        border-color: var(--primary-color);
        box-shadow: 0 0 0 0.25rem rgba(138, 95, 54, 0.25);
        background-color: white;
    }

    label {
        color: var(--primary-color);
        font-weight: 500;
        margin-bottom: 8px;
        display: block;
    }

    .btn-success {
        background-color: var(--primary-color);
        border: none;
        padding: 10px 25px;
        border-radius: 6px;
        font-weight: 500;
        transition: all 0.3s;
    }

    .btn-success:hover {
        background-color: var(--hover-color);
        transform: translateY(-2px);
    }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
        padding: 10px 25px;
        border-radius: 6px;
        font-weight: 500;
        transition: all 0.3s;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
        transform: translateY(-2px);
    }

    .file-input-container {
        position: relative;
        overflow: hidden;
        display: inline-block;
        width: 100%;
    }

    .file-input-container input[type="file"] {
        position: absolute;
        left: 0;
        top: 0;
        opacity: 0;
        width: 100%;
        height: 100%;
        cursor: pointer;
    }

    .file-input-label {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 12px;
        background-color: var(--secondary-color);
        border: 1px dashed var(--primary-color);
        border-radius: 6px;
        color: var(--primary-color);
        transition: all 0.3s;
    }

    .file-input-container:hover .file-input-label {
        background-color: rgba(138, 95, 54, 0.1);
    }

    .buttons-container {
        display: flex;
        gap: 15px;
        margin-top: 1.5rem;
    }

    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .profile-edit-container {
        animation: fadeIn 0.6s ease-out forwards;
    }
</style>

<div class="profile-edit-container">
    <h2>Profili Düzenle</h2>

    <form asp-action="EditProfile" method="post" enctype="multipart/form-data">
        <div class="mb-4">
            <label asp-for="FullName">Ad Soyad</label>
            <input asp-for="FullName" class="form-control" placeholder="Ad ve soyadınızı girin" />
        </div>
        
        <div class="mb-4">
            <label asp-for="Bio">Bio</label>
            <textarea asp-for="Bio" class="form-control" rows="4" placeholder="Kendiniz hakkında bir şeyler yazın"></textarea>
        </div>
        
        <div class="mb-4">
            <label>Profil Resmi Yükle</label>
            <div class="file-input-container">
                <input type="file" name="profileImage" id="profileImage" class="form-control" />
                <label for="profileImage" class="file-input-label">
                    <i class="fas fa-cloud-upload-alt me-2"></i> Dosya Seç veya Sürükle
                </label>
            </div>
        </div>

        <div class="buttons-container">
            <button type="submit" class="btn btn-success">
                <i class="fas fa-save me-2"></i> Kaydet
            </button>
            <a asp-action="Profile" class="btn btn-secondary">
                <i class="fas fa-times me-2"></i> İptal
            </a>
        </div>
    </form>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />