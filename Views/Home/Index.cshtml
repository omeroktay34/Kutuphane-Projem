@{
    ViewData["Title"] = "Ana Sayfa";
}

@model kutuphane.Models.UserModel

<div class="container d-flex justify-content-center align-items-center" style="min-height: 70vh;">
    <div class="login-container shadow-lg">
        <div class="library-icon text-center mb-4">
            <i class="fas fa-book-open fa-3x" style="color: #8a5f36;"></i>
        </div>
        <h2 class="text-center mb-4">Hoş Geldiniz</h2>
        
        @if (TempData["username"] != null)
        {
            <div class="welcome-message text-center mb-4">
                <p class="lead">Hoş geldin, <strong>@TempData["username"]</strong>!</p>
                <div class="d-flex justify-content-center gap-3 mt-3">
                    <a href="/Home/Logout" class="btn btn-outline-secondary">
                        <i class="fas fa-sign-out-alt me-2"></i>Çıkış Yap
                    </a>
                </div>
            </div>
        }
        else
        {
            <div class="text-center mb-4">
                <p class="text-muted">Giriş yapmadınız</p>
                <div class="d-flex justify-content-center gap-3 mt-3">
                    <a href="/Home/Login" class="btn login-btn">
                        <i class="fas fa-sign-in-alt me-2"></i>Giriş Yap
                    </a>
                    <a href="/Home/Register" class="btn btn-outline-secondary">
                        <i class="fas fa-user-plus me-2" style="margin-top: 10px;"></i>Kayıt Ol
                    </a>
                </div>
            </div>
        }
        
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger mt-3 d-flex align-items-center">
                <i class="fas fa-exclamation-circle me-2"></i>
                <div>@TempData["Error"]</div>
            </div>
        }

        @if (ViewBag.Hata != null)
        {
            <div class="alert alert-danger mt-3 d-flex align-items-center">
                <i class="fas fa-exclamation-circle me-2"></i>
                <div>@ViewBag.Hata</div>
            </div>
        }
    </div>
</div>

<style>
    .login-container {
        background-color: white;
        padding: 2.5rem;
        border-radius: 15px;
        width: 100%;
        max-width: 450px;
        border-top: 5px solid #8a5f36;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    }
    
    .library-icon i {
        transition: transform 0.5s;
    }
    
    .library-icon:hover i {
        transform: rotate(15deg);
    }
    
    .login-btn {
        background-color: #8a5f36;
        color: white;
        padding: 12px;
        font-weight: 500;
        border-radius: 8px;
        transition: all 0.3s;
        letter-spacing: 0.5px;
    }
    
    .login-btn:hover {
        background-color: #6d4b2a;
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(138, 95, 54, 0.3);
    }
    
    .welcome-message {
        padding: 1rem;
        background-color: #f8f9fa;
        border-radius: 8px;
        border-left: 4px solid #8a5f36;
    }
    
    .btn-outline-secondary {
        border-color: #8a5f36;
        color: #8a5f36;
    }
    
    .btn-outline-secondary:hover {
        background-color: #8a5f36;
        color: white;
    }
</style>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
         
            const buttons = document.querySelectorAll('.btn');
            buttons.forEach(button => {
                button.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-2px)';
                });
                button.addEventListener('mouseleave', function() {
                    this.style.transform = '';
                });
            });
        });
    </script>
}