        max-width: 600px;
        margin: 0 auto;
    }
    
    .faq-inner-accordion .accordion-button {
        padding-left: 2rem;
        font-size: 0.95rem;
    }
    
    .accordion-button:not(.collapsed) {
        background-color: rgba(138, 95, 54, 0.1);
        color: #5a3d23;
    }
    
    .accordion-button:focus {
        box-shadow: 0 0 0 0.25rem rgba(138, 95, 54, 0.25);
    }
</style>

@section Scripts {
    <script>
   
        document.querySelectorAll('.accordion-button').forEach(button => {
            button.addEventListener('click', function() {
               
                const targetCollapse = document.querySelector(this.getAttribute('data-bs-target'));
                
            
                if (!this.classList.contains('collapsed')) {
                  
                    const bsCollapse = bootstrap.Collapse.getInstance(targetCollapse) || new bootstrap.Collapse(targetCollapse);
                    bsCollapse.hide();
                    
                   
                    event.stopPropagation();
                    event.preventDefault();
                }
            });
        });

      
        document.getElementById('faqSearch').addEventListener('input', function() {
            const searchTerm = this.value.toLowerCase();
            const questions = document.querySelectorAll('.accordion-button');
            
            questions.forEach(question => {
                const questionText = question.textContent.toLowerCase();
                const parentItem = question.closest('.accordion-item');
                
                if (questionText.includes(searchTerm)) {
                    parentItem.style.display = 'block';
                    const collapseTarget = question.getAttribute('data-bs-target');
                    const collapseElement = document.querySelector(collapseTarget);
                    new bootstrap.Collapse(collapseElement, { toggle: true });
                } else {
                    parentItem.style.display = 'none';
                }
            });
        });
    
     
        document.querySelectorAll('.accordion-button').forEach(button => {
            button.addEventListener('click', function() {
                const targetCollapse = document.querySelector(this.getAttribute('data-bs-target'));
                const bsCollapse = bootstrap.Collapse.getInstance(targetCollapse) || new bootstrap.Collapse(targetCollapse);
                
               
                if (targetCollapse.classList.contains('show')) {
                    bsCollapse.hide();
                    event.stopPropagation();
                    event.preventDefault();
                }
            });
        });

    </script>
